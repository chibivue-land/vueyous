{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "baseUrl": ".",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "paths": {
      "vueyouse": [
        "./packages/"
      ]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": [
    "packages/**/*.ts",
    "examples/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
